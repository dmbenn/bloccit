<div>
  <%= simple_form_for [topic, post], html: {class: 'form-horizontal' } do |f| %>
    <% if post.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4> Please review the <%= pluralize(post.errors.count, 'error') %>.</h4>
        <ul>
          <% post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :title, input_html: {class: 'form-control'}, error: false %>
    <%= f.input :body, as: :text, input_html: { rows: 8, class: 'form-control'}, error: false %>
    <%= f.button :submit, class: 'btn-primary' %>
  <% end %>
</div>