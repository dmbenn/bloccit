<%= simple_form_for [@post, @comment], url: post_comments_path(@post, @comment) do |f| %>
  <% if @comment.errors.any? %>
    <div class="alert alert-danger">
      <h4> There are <%= pluralize(@comment.errors.count, "error") %>.</h4>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :body, as: :text, input_html: { columns: 4, rows: 4, class: 'form-control'}, error: false %>
  <%= f.hidden_field :post_id, value: @post[:id] %>
  <%= f.button :submit, class: 'btn-success' %>
<% end %>